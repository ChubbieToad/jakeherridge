---
layout: layouts/base.njk
---
<article class="max-w-4xl mx-auto p-6">
  <header class="mb-8">
    {% if featuredImage %}
      <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-64 md:h-96 object-cover rounded-lg mb-6">
    {% endif %}
    
    <div class="flex items-center gap-2 text-sm text-[color:var(--muted)] mb-4">
      <time datetime="{{ date | date('yyyy-MM-dd') }}">{{ date | date('MMM d, yyyy') }}</time>
      {% if tags %}
        {% for tag in tags %}
          <span class="bg-[color:var(--accent)]/30 px-2 py-1 rounded text-xs">{{ tag }}</span>
        {% endfor %}
      {% endif %}
    </div>
    
    <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
    
    {% if excerpt %}
      <p class="text-xl text-[color:var(--muted)]">{{ excerpt }}</p>
    {% endif %}
  </header>

  <div class="prose prose-lg max-w-none">
    {{ content | safe }}
  </div>
</article>
